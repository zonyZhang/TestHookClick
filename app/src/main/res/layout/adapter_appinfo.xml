<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/app_icon"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:src="@mipmap/ic_launcher_round" />

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dip">

        <TextView
            android:id="@+id/tv_label"
            style="@style/AppTextStyle"
            android:text="APP LABLE : " />

        <TextView
            android:id="@+id/tv_label_value"
            style="@style/AppTextValueStyle"
            android:layout_alignTop="@id/tv_label"
            android:layout_marginLeft="3dip"
            android:layout_toRightOf="@id/tv_label"
            android:text="Label" />

        <TextView
            android:id="@+id/tv_app_name"
            style="@style/AppTextStyle"
            android:layout_below="@id/tv_label"
            android:text="APP NAME:" />

        <TextView
            android:id="@+id/tv_app_name_value"
            style="@style/AppTextValueStyle"
            android:layout_alignLeft="@id/tv_label_value"
            android:layout_alignTop="@id/tv_app_name"
            android:layout_below="@id/tv_label_value"
            android:text="com.zony.testplugin" />

        <TextView
            android:id="@+id/tv_app_path"
            style="@style/AppTextStyle"
            android:layout_below="@id/tv_app_name"
            android:text="APP PATH:" />

        <TextView
            android:id="@+id/tv_app_path_value"
            style="@style/AppTextValueStyle"
            android:layout_alignLeft="@id/tv_app_name_value"
            android:layout_alignTop="@id/tv_app_path"
            android:layout_below="@id/tv_app_name_value"
            android:text="/data/app/" />

        <TextView
            android:id="@+id/tv_app_size"
            style="@style/AppTextStyle"
            android:layout_below="@id/tv_app_path"
            android:text="APP SIZE :" />

        <TextView
            android:id="@+id/tv_app_size_value"
            style="@style/AppTextValueStyle"
            android:layout_alignLeft="@id/tv_app_path_value"
            android:layout_alignTop="@id/tv_app_size"
            android:layout_below="@id/tv_app_path_value"
            android:text="12M" />

        <TextView
            android:id="@+id/tv_app_type"
            style="@style/AppTextStyle"
            android:layout_below="@id/tv_app_size"
            android:text="APP STYLE :" />

        <TextView
            android:id="@+id/tv_app_type_value"
            style="@style/AppTextValueStyle"
            android:layout_alignLeft="@id/tv_app_size_value"
            android:layout_alignTop="@id/tv_app_type"
            android:layout_below="@id/tv_app_size_value"
            android:text="SYSTEM" />

        <TextView
            android:id="@+id/tv_app_intent"
            style="@style/AppTextStyle"
            android:layout_below="@id/tv_app_type"
            android:text="APP INTENT :" />

        <TextView
            android:id="@+id/tv_app_intent_value"
            style="@style/AppTextValueStyle"
            android:layout_alignLeft="@id/tv_app_type_value"
            android:layout_alignTop="@id/tv_app_intent"
            android:layout_below="@id/tv_app_type_value"
            android:text="SYSTEM" />
    </RelativeLayout>
</LinearLayout>